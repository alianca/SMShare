<% page "main" %>
<% tab "main" %>
<div id="tv">
  <%= render :partial => "tv" %>
</div>

<%= link_to new_user_registration_path, :id => "signup-button" do %>
  <p id="signup-line1">Registre-se agora</p>
  <p id="signup-line2">e comece a lucrar!</p>
<% end %>

<div id="news">
  <p class="title">Últimas novidades</p>
  <div class="body">
    <% if @news %>
      <%= @news.short.html_safe %>
    <% else %>
      <p>Bem vindo ao smShare, navegue em nosso site e conheça esse novo serviço de compartilhamento que lhe permite ganhar com seus downloads</p>
    <% end %>
    <%= link_to "Ler Mais...", news_path(@news), :class => "more" %>
  </div>
</div>

<div id="search" class="container">
  <%= render :partial => "layouts/search" %>
</div>
