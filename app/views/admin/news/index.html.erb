<h2>Editar notícias</h2>
<table id="news">
  <thead>
    <tr>
      <th>Título</th>
      <th>Data</th>
      <th>Excluir</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= link_to news.title, edit_admin_news_path(news) %></td>
        <td><%= news.created_at.strftime "%d/%m/%Y" %></td>
        <td><%= link_to "[x]", admin_news_path(news), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
