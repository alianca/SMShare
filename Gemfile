source 'http://rubygems.org'

# Bundle edge Rails instead:
gem 'rails', '>= 3.0.3'

# To use debugger
gem 'ruby-debug', :group => [:development, :test]

# To use Mongoid
gem 'mongoid', '>= 2.0.0.beta.20'
gem 'bson_ext'

# To use Devise
gem 'devise'

# To write news as admin
gem 'tiny_mce'

# To use Formtastic
gem 'formtastic'

# To use Carrierwave
gem 'carrierwave'

# To use jQuery
gem 'jquery-rails'

# Deploy with Capistrano
gem 'capistrano'

# To use Resque
gem 'resque'
gem 'resque-retry'
gem 'SystemTimer'

# GoogleChart
gem 'gchartrb', :require => 'google_chart'

# To use pagination
gem "will_paginate", "~> 3.0.pre2"

# To use Curl
gem 'curb', :require => 'curl'

# Bundle gems for certain environments:
group :development, :test do
  gem 'rspec-rails'
  gem 'rspec'
  gem 'capybara'
  gem 'cucumber-rails'
  gem 'cucumber'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
end
