<%= semantic_form_for @new_folder, :url => user_panel_path do |f| %>
  <%= hidden_field_tag :folder_id, @folder._id %>

  <%= f.inputs do %>
    <%= f.input :name, :label => "Nome da pasta:" %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :label => "Confirmar" %>
  <% end %>
<% end %>
