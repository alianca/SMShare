<div class="box left vertical">
  <ol>
    <%= link_to params.merge(:boxes => (params[:boxes] || {}).merge({:left => 'a'})) do %>
      <li <%= "class=active" if @boxes[:left] == 'a' || @boxes[:left] == nil %> >a</li>
    <% end %>
    <%= link_to params.merge(:boxes => (params[:boxes] || {}).merge({:left => 'b'})) do %>
      <li <%= "class=active" if @boxes[:left] == 'b' %> >b</li>
    <% end %>
    <%= link_to params.merge(:boxes => (params[:boxes] || {}).merge({:left => 'c'})) do %>
      <li <%= "class=active" if @boxes[:left] == 'c' %> >c</li>
    <% end %>
  </ol>

  <div class="preview"></div>

  <div class="url-container">
    <div class="icon"></div>
    <span class="text-field">
      <span class="left"></span><%= text_field_tag :url %><span class="right"></span>
    </span>
  </div>

  <span class="dimensions">160x600</span>
</div>

