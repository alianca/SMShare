<div id="file-container">
  <div class="general-info">
    <img class="filetype" />
    <h5 class="title"><%= @file.alias %></h5>
    <p class="description"><%= @file.description %></p>
  </div>
  
  <div class="images">
    <% @images.each do |img| %>
      <%= image_tag img %>
    <% end %>
  </div>
  
  <div class="file-info">
    <div class="left">
      <%= image_tag "search/icone-data.png" %> Enviado em <%= @file.created_at.strftime "%d/%m/%Y" %><br/>
      <%= image_tag "search/icone-dono.png" %> Enviado por <%= link_to @file.owner.name %><br/>
      <%= image_tag "search/icone-categoria-video.png" %> Arquivo do tipo <%= @file.filetype_human_readable %><br/>
      <%= image_tag "search/icone-categoria.png" %> Categoria <%= link_to @file.categories.first.name %><br/>
    </div>
    <div class="right">
      <%= image_tag "search/icone-tamanho.png" %> Tamanho <%= number_to_human_size(@file.filesize, :precision => 3) %><br/>
      <%= image_tag "search/icone-comentarios.png" %> <%= link_to @file.comments.count.to_s + " comentários" %><br/>
      <%= image_tag "search/icone-nota.png" %> <%= link_to "Nota " + @file.rate.to_s %><br/>
      <%= image_tag "search/icone-downloads.png" %> <%= @file.downloads.count %> downloads<br/>
    </div>
    
    <div class="download-button">
      <%= link_to "Baixar o arquivo!", download_user_file_url(@file), :class => "download-title" %><br/>
      <span class="virus">Nenhum virus detectado</span>
      <span class="antivirus">Testado por <%= link_to "Kaspersky Anti-Virus" %></span>
    </div>
  </div>
  
  <div class="share">
    <h5>Compartilhe esse arquivo</h5>
    <div class="labels">
      URL:<br/>
      HTML:<br/>
      Forum:<br/>
    </div>
    <div class="fields">
      <%= text_field_tag "" %><br/>
      <%= text_field_tag "" %><br/>
      <%= text_field_tag "" %><br/>
    </div>
  </div>  
  
  <div class="comments">
    <h5>Comentários <span>(<%= @comments.count %>)</span></h5>
    <% if @comments.count > 0 %>
      <%= render :partial => "comment", :collection => @comments %>
      <%= will_paginate @comments %>
    <% end %>
    
    <%= form_tag new_comment_search_path, :id => "new-comment-form", :method => :post do %>
      <%= text_area_tag "message" %>
      <span class="characters">Caracteres restantes: <span class="character-counter">280</span></span>
      <%= submit_tag "Enviar" %>
      <span class="rate-file">Avalie esse arquivo:
        <% for i in 1..5 %>
          <img class="star index<%= i %>"/>
          <%= radio_button_tag("rate", i) %>
        <% end %>
      </span>
    <% end %>
  </div>
</div>



