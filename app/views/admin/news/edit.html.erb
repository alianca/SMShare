<h2>Adicionar notícias</h2>
<div id="news_edit_container">
  <%= semantic_form_for [:admin, @item] do |f| %>
    <%= f.inputs do %>
      <%= f.input :title %>
      <h3>Resumo</h3> <%= f.text_area :short, :class => 'tinymce' %>
      <h3>Completa</h3> <%= f.text_area :full, :class => 'tinymce' %>
    <% end %>
    <%= link_to "Ver todas as notícias", admin_news_index_path %>
    <%= f.actions do %>
      <%= f.submit "Salvar", :as => :button %>
    <% end %>
  <% end %>
</div>
