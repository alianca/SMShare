<div class="comment <%= comment_counter % 2 == 1 ? "odd" : "even" %>">
  <div class="header">
    <%= comment.created_at.strftime("%d/%m/%Y") %> |
    <% if comment.owner != nil %>
      <%= comment.owner.name %>
    <% else %>
      An√¥nimo
    <% end %>
  </div>
  <div class="rate-stars">
    <% if comment['rate'] > 0 %>
      <%= image_tag("search/icone-nota-on.png") * comment['rate'] +
          image_tag("search/icone-nota-off.png") * (5 - comment['rate']) %>
    <% end %>
  </div>
  
  <span class="texto"><%= comment.message %></span>
</div>
