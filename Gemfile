source 'http://rubygems.org'

# Bundle edge Rails instead:
gem 'rails'

# To use the latests rake
gem 'rake'

# To use debugger
#gem 'ruby-debug', :group => [:development, :test]

# To use Mongoid
gem 'mongoid'
gem 'bson_ext'

# To use Devise
gem 'devise'

# To write news as admin
gem 'tiny_mce'

# To use Formtastic
gem 'formtastic'

# To use Carrierwave
gem 'carrierwave'
gem 'carrierwave-mongoid', :require => 'carrierwave/mongoid'

# To use MiniMagick
gem 'mini_magick'

# To use jQuery
gem 'jquery-rails'

# Deploy with Capistrano
gem 'capistrano'

# To use Resque
gem 'resque'
gem 'resque-retry'
gem 'resque-status'

# LazyHighcharts
gem 'lazy_high_charts'

# To use pagination
gem "will_paginate", :require => 'will_paginate/array'

# To use Curl
gem 'curb', :require => 'curl'

# To use Tire.rb
gem 'tire'

# To use ZipRuby
gem 'zipruby'

# To use Carmen
gem 'carmen'

# Bundle gems for certain environments:
group :test do
  gem 'rspec-rails'
  gem 'rspec'
  gem 'capybara'
  gem 'cucumber-rails'
  gem 'cucumber'
  gem 'database_cleaner'
  # gem 'factory_girl_rails'
end

