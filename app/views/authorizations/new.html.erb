    <% else %>

      <div class="not-found">
        <p class="bold">O arquivo que procura foi removido ou não existe</p>
        <p>Quem sabe você pode achar o que estava procurando em nosso sistema de busca, o smSearch!</p>

        <div class="code_area">
          <%= form_tag search_index_url, :id => :search_field, :method => :get do %>
            <%= text_field_tag :q %>
            <%= submit_tag "Buscar" %>
          <% end %>
        </div>
      </div>

    <% end %>

    <div class="bottom">
      <%= link_to root_path, :target => "_top" do %>
        <div class="logo"></div>
      <% end %>

      <%= link_to new_user_registration_path, :class => :have_one, :target => "_top" do %>
        Tenha um desses você também <span>»</span>
      <% end %>
    </div>

    <div id="style-data">
      <%= @style.to_json %>
    </div>

    <div id="background-data">
      <%= @background.image.url %>
