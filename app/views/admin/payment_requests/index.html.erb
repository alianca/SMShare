<h2>Requisições de Pagamento</h2>

<%= form_tag do |f| %>
  <td>
    <span>Mês:
      <select name="month">
        <% @payment_requests.collect(&:request_month).each do |m| %>
          <option value="<%= m %>"><%= m %></option>
        <% end %>
      </select>
    </span>
  </td>
  <td><%= button_tag "Pagar", :as => :submit %></td>
<% end %>

<table id="users" class="tablesorter">
  <thead>
    <tr>
      <th>Status</th>
      <th>Nome</th>
      <th>Mês</th>
      <th>Data de Pagamento</th>
      <th>Método</th>
      <th>Downloads</th>
      <th>2º Nível</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @payment_requests.each do |pr| %>
      <tr class="request <%= pr.status %>">
        <td><%= pr.status %></td>
        <td><%= link_to pr.user.name, [:admin, pr.user] %></td>
        <td><%= pr.request_month %></td>
        <td><%= pr.completed_at %><%= "*" if pr.status != :complete %></td>
        <td><%= pr.payment_method %></td>
        <td><%= "%0.2f" % pr.value %></td>
        <td><%= "%0.2f" % pr.referred_value %></td>
        <td><%= "%0.2f" % pr.total %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td>Total</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td><%= "%0.2f" % @payment_requests.collect(&:value).sum %></td>
      <td><%= "%0.2f" % @payment_requests.collect(&:referred_value).sum %></td>
      <td><%= "%0.2f" % @payment_requests.collect(&:total).sum %></td>
    </tr>
  </tfoot>

</table>
