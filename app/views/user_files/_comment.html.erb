<div class="comment <%= cycle("even", "odd") -%>">
  <div class="header">
    <%= comment.created_at.strftime("%d/%m/%Y") %> |
    <% if comment.owner %>
      <%= comment.owner.name %>
      <% if comment.owner == current_user %>
        <span class="remove"><%= link_to "Remover", comment_path(comment), :method => :delete %></span>
      <% end %>
    <% else %>
      An√¥nimo
    <% end %>
  </div>
  <div class="rate-stars">
    <% if comment['rate'] > 0 %>
      <%= image_tag("search/icone-nota-on.png") * comment['rate'] +
          image_tag("search/icone-nota-off.png") * (5 - comment['rate']) %>
    <% end %>
  </div>
  
  <p><%= comment.message %></p>
</div>
