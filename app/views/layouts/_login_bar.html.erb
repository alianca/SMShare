<ul id="header-login">
  <% if user_signed_in? %>
    <li id="profile-link">
      Bem vindo
      <%= link_to current_user.name, user_panel_path %>
    </li>
    <li id="logout-link"><%= link_to "Sair", destroy_user_session_path %></li>
  <% else %>
    <li id="login-link">
      <%= link_to "Login", new_user_session_path %>
      <%= form_for :user, :url => user_session_path, :html => {:id =>"login-form"} do |f| %>
        <%= label_tag :login_email, "Email" %>
        <%= f.text_field :email, :id => :login_email, :class => "clear-on-focus", :title => "Email ou UsuÃ¡rio" %>
        <%= label_tag :login_password, "Senha" %>
        <%= f.password_field :password, :id => :login_password, :class => "clear-on-focus", :title => "suasenha" %>

        <%= f.submit "Entrar" %>

        <div><%= link_to "Esqueceu sua senha?", new_user_password_path, :id => :password %></div>
      <% end %>
    </li>

    <li id="signup-link"><%= link_to "Registrar Gratuitamente", new_user_registration_path %></li>
  <% end %>
</ul>
